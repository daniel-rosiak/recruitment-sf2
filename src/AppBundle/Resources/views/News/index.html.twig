{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
<section id="content-box">
    <h1>News</h1>
    <div class="content">
        {% if news is not empty %}
            {% for n in news %}
                <p>{{ n.content|slice(0, 100) }}
                <a href="#">See more</a>
            {% endfor %}
            </p>
        {% endif %}
    </div>
</section>
{% endblock %}